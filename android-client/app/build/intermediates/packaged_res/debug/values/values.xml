<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="ic_launcher_background">#0060AC</color>
    <color name="on_primary">#FFFFFF</color>
    <color name="on_primary_container">#001C39</color>
    <color name="primary">#0060AC</color>
    <color name="primary_container">#D6E3FF</color>
    <color name="secondary">#535F70</color>
    <color name="secondary_container">#D7E3F8</color>
    <string name="app_name">Mac2Droid</string>
    <style name="Theme.Mac2Droid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.Mac2Droid.Fullscreen" parent="Theme.Mac2Droid">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>